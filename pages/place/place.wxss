  display: flex;
  padding:15rpx 60rpx;
  box-sizing: border-box;
}

.search{
  width: 100%;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding-left:6rpx; 
}

.input{
  padding-left:10rpx; 
  width: 100%; 
  font-size: 36rpx;
}

.img{
  width:50rpx;
  height: 50rpx;
  z-index: 999;
}

.placeholder{
  color:#BDBDBD;
  font-size: 26rpx;
}

.body{
  width: 100%;
  overflow-x: hidden;
}